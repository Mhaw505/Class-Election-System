<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classElection.controller.RoleSelectionController"
            prefHeight="300.0" prefWidth="420.0"
            style="-fx-background-color: white;">

    <!-- Title -->
    <Label layoutX="120" layoutY="30" text="Select Your Role"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" />

    <!-- Admin Button -->
    <Button fx:id="adminBtn" layoutX="60" layoutY="90" text="Admin"
            onAction="#handleAdmin"
            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
            prefWidth="130" prefHeight="40" />

    <!-- Voter Button -->
    <Button fx:id="voterBtn" layoutX="230" layoutY="90" text="Voter"
            onAction="#handleVoter"
            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
            prefWidth="130" prefHeight="40" />

    <!-- Back Button (Red) -->
    <Button fx:id="backBtn" layoutX="150" layoutY="180" text="Back"
            onAction="#handleBack"
            style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
            prefWidth="120" prefHeight="35" />

</AnchorPane>

