<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classElection.controller.ResultController"
            prefHeight="250.0" prefWidth="400.0"
            style="-fx-background-color: #121212;">

    <children>
        <VBox layoutX="40" layoutY="20" spacing="20"
              style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #2c2c2c;">

            <Label text="Election Results"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Label fx:id="resultsLabel" prefWidth="320" prefHeight="100" wrapText="true"
                   style="-fx-text-fill: white; -fx-font-size: 14px;" />

            <Button fx:id="finishBtn" text="Finish" onAction="#handleFinish"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </children>
</AnchorPane>
