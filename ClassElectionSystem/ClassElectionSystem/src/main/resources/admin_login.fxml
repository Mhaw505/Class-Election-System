<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classElection.controller.AdminLoginController"
            prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: white;">
    <children>

        <!-- Title -->
        <Label layoutX="145" layoutY="20" text="Admin Login"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" />

        <!-- Username -->
        <Label layoutX="50" layoutY="80" text="Username:"
               style="-fx-text-fill: black;" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="75" prefWidth="200"
                   style="-fx-text-fill: black; -fx-background-color: white; -fx-border-color: gray;" />

        <!-- Password -->
        <Label layoutX="50" layoutY="130" text="Password:"
               style="-fx-text-fill: black;" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="125" prefWidth="200"
                       style="-fx-text-fill: black; -fx-background-color: white; -fx-border-color: gray;" />

        <!-- Login Button -->
        <Button fx:id="loginBtn" layoutX="150" layoutY="180" text="Login"
                onAction="#handleLogin"
                style="-fx-background-color: green; -fx-text-fill: white; -fx-font-weight: bold;" />

        <!-- Back Button (Red) -->
        <Button layoutX="50" layoutY="230" text="Back"
                onAction="#handleBack"
                style="-fx-background-color: red; -fx-text-fill: white;" />

        <!-- Error Message -->
        <Label fx:id="errorLabel" layoutX="150" layoutY="230" textFill="red" />

    </children>
</AnchorPane>
