<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classElection.controller.ThankYouController"
            prefHeight="200.0" prefWidth="400.0"
            style="-fx-background-color: #121212;">

    <children>
        <VBox layoutX="50" layoutY="40" spacing="20"
              style="-fx-background-color: #1e1e1e; -fx-padding: 30; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #2c2c2c;"
              alignment="CENTER">

            <Label text="Thank you for participating!"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />

            <Button fx:id="exitBtn" text="Exit" onAction="#handleExit"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </children>
</AnchorPane>
