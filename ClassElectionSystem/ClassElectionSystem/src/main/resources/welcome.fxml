<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classElection.controller.WelcomeController"
            prefHeight="250.0" prefWidth="450.0"
            style="-fx-background-color: white;">
    
    <!-- Centered Welcome Label -->
    <Label layoutX="85" layoutY="60" text="Welcome to Class Election System"
           style="-fx-border-color: gray; -fx-border-radius: 5px; -fx-background-radius: 5px;
                  -fx-padding: 10px; -fx-font-size: 15px; -fx-font-weight: bold;
                  -fx-background-color: #f0f0f0; -fx-text-fill: black;" />
    
    <!-- Centered Get Started Button -->
    <Button fx:id="getStartedBtn" layoutX="155" layoutY="140" mnemonicParsing="false" text="Get Started"
            onAction="#handleGetStarted"
            prefWidth="140"
            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</AnchorPane>
